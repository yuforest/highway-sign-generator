<%= form_with model: @document, local: true do |f| %>
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :name %>(任意)
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.submit '送信', class: 'btn btn-primary' %>
  </div>
<% end %>
