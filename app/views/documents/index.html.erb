<% set_meta_tags title: "ようじょぶんしょジェネレータ",
                 description: "ようじょぶんしょジェネレータは幼女のようなフォントで書いた文章の画像を簡単に生成できるアプリケーションです。作った文書はシェアしたり、ダウンロードしたりできます。",
                 og: {
                   title: "ようじょぶんしょジェネレータ",
                   description: "ようじょぶんしょジェネレータは幼女のようなフォントで書いた文章の画像を簡単に生成できるアプリケーションです。作った文書はシェアしたり、ダウンロードしたりできます。",
                   image: ogp_images_url(text: @introduction)
                 }
%>
<div class="container mt-4">
  <section class="my-4">
    <div class="d-md-flex d-block justify-content-between align-items-center">
      <h2 class="display-4">
        ようじょぶんしょいちらん
      </h2>
      <%= link_to "ようじょぶんしょをつくる", new_document_path, class: 'btn btn-pink' %>
    </div>
    <% @documents.each do |document| %>
      <%= render "shared/components/document_list_item", document: document %>
    <% end %>
    <%= paginate @documents %>
  </section>
</div>
